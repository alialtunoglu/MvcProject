@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "GetInBoxMessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>
                        Gelen Mesaj Detayları
                    </h1>
                </div>
               
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="/Message/Inbox" class="btn btn-primary btn-block mb-3">Gelen Mesajlara Dön</a>
                    @Html.Action("RenderMailSidebar", "Contact")
                </div>

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Maili Oku</h3>
                            <div class="card-tools">
                                @if (ViewBag.PreviousMessageId != null)
                                {
                                    <a href="/Message/GetInBoxMessageDetails/@ViewBag.PreviousMessageId" class="btn btn-tool" data-toggle="tooltip" title="Önceki"><i class="fas fa-chevron-left"></i></a>
                                }
                                else
                                {
                                    <button class="btn btn-tool" disabled><i class="fas fa-chevron-left"></i></button>
                                }

                                @if (ViewBag.NextMessageId != null)
                                {
                                    <a href="/Message/GetInBoxMessageDetails/@ViewBag.NextMessageId" class="btn btn-tool" data-toggle="tooltip" title="Sonraki"><i class="fas fa-chevron-right"></i></a>
                                }
                                else
                                {
                                    <button class="btn btn-tool" disabled><i class="fas fa-chevron-right"></i></button>
                                }
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="mailbox-read-info">
                                <h5>Konu: @Model.Subject</h5>
                                <h6>
                                    Mail: @Model.SenderMail
                                    <span class="mailbox-read-time float-right">@Model.MessageDate.ToString("dd-MMM-yyyy")</span>
                                </h6>
                            </div>
                            <!-- /.mailbox-read-info -->
                            <!-- /.mailbox-controls -->
                            <div class="mailbox-read-message">
                                @Html.Raw(Model.MessageContent)
                            </div>
                            <!-- /.mailbox-read-message -->
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-reply"></i> Reply</button>
                                <button type="button" class="btn btn-default"><i class="fas fa-share"></i> Forward</button>
                            </div>
                            <button type="button" class="btn btn-default"><i class="far fa-trash-alt"></i> Delete</button>
                            <button type="button" class="btn btn-default"><i class="fas fa-print"></i> Print</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>

                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
</body>
</html>

