
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
<form class="form-group" method="post">
    <input type="text" placeholder="Kategori Adı" name="CategoryName" class="form-control" />
    <br />
    <input type="text" placeholder="Kategori Açıklaması" name="CategoryDescription" class="form-control" />
    <br />
    <p>Kategori durumu seçiniz</p>
    <input type="radio" id="StatusTrue" name="CategoryStatus" value="true">
    <label for="StatusTrue">True</label><br>
    <input type="radio" id="StatusFalse" name="CategoryStatus" value="false">
    <label for="StatusFalse">False</label><br>
    <br />
    <button class="btn btn-primary"> Ekle </button>

</form>